@page "/register"

<div class="d-flex align-items-center justify-content-between">
    <div class="col-6">
        <img src="https://img.freepik.com/free-vector/computer-login-concept-illustration_114360-7962.jpg?w=2000"
             style="width: 100%;height: 100%; object-fit:cover">
    </div>
    <div class="col-7 d-flex justify-content-center">
        <EditForm Model="@User" OnSubmit="@HandleSubmit">
            <DataAnnotationsValidator />
            <h3>Đăng kí</h3>
            @if (result != null)
            {
                if ((bool)result)
                {
                    <div class="alert alert-success" role="alert">
                        Đăng kí tài khoản thành công
                    </div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert">
                        Tên tài khoản hoặc email đã tồn tại
                    </div>
                }
            }
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <InputText @bind-Value="@User.Username" class="form-control" id="username" placeholder="Nhập vào username"></InputText>
                <ValidationMessage For="() => User.Username" class="text-danger"/>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <InputText @bind-Value="@User.Email" class="form-control" id="email" placeholder="Nhập vào email" type="email"></InputText>
                <ValidationMessage For="() => User.Email" class="text-danger" />
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mật khẩu</label>
                <InputText @bind-Value="@User.Password" class="form-control" id="password" placeholder="Nhập vào mật khẩu" type="password"></InputText>
                <ValidationMessage For="() => User.Password" class="text-danger"/>
            </div>
            <div class="mb-3">
                <label for="confirmpassword" class="form-label">Xác nhận mật khẩu</label>
                <InputText @bind-Value="@User.ConfirmPassword" class="form-control" id="confirmpassword" placeholder="Xác nhận mật khẩu" type="password"></InputText>
                <ValidationMessage For="() => User.ConfirmPassword" class="text-danger"/>
            </div>
            <button type="submit" class="btn btn-primary col-12">Đăng kí</button>
        </EditForm>
    </div>
</div>
