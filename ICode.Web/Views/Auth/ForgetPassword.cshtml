@using CodeStudy.Models
@model ForgetPassword
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/Auth/base.css" rel="stylesheet" />
</head>
<body>
    <div class="main d-flex flex-column align-items-center justify-content-center">
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger text-center" role="alert" style="width: 20rem">
                @TempData["error"]
            </div>
        }
        @if (TempData["message"] != null)
        {
            <div class="alert alert-success text-center" role="alert" style="width: 20rem">
                @TempData["message"]
            </div>
        }
        <form class="d-flex flex-column align-items-center justify-content-center col-2" asp-action="ForgetPassword" asp-controller="Auth" method="POST">
            <input class="mb-3 p-2" placeholder="Tên đăng nhập" asp-for="Name" />
            <span asp-validation-for="Name"></span>
            <input class="text-center p-2" value="Đặt lại mật khẩu" type="submit" />
        </form>
        <span class="mt-2">Đã có tài khoản? <a asp-action="Login" asp-controller="Auth"> Đăng nhập ngay</a></span>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>