@model ForgetPasswordSubmit
@{
    Layout = "_PlainLayout";
}
@section Styles {
    <link href="~/css/Auth/base.css" rel="stylesheet" />
}

<div class="main d-flex flex-column align-items-center justify-content-center">
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger text-center" role="alert" style="width: 20rem">
            @TempData["error"]
        </div>
    }
    @if (TempData["message"] != null)
    {
        <div class="alert alert-success text-center" role="alert" style="width: 20rem">
            @TempData["message"]
        </div>
    }
    <form class="d-flex flex-column align-items-center justify-content-center col-2" asp-action="ForgetPasswordSubmit" asp-controller="Auth" method="POST">
        <input class="mb-3 p-2" placeholder="Mật khẩu mới" asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <input class="mb-3 p-2" placeholder="Xác nhận mật khẩu" asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
        <input class="text-center p-2" value="Đặt lại mật khẩu" type="submit" />
        <input type="hidden" name="userId" value="@ViewBag.userId" />
        <input type="hidden" name="token" value="@ViewBag.token" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}