@using CodeStudy.Models
@model RegisterUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/Auth/base.css" rel="stylesheet" />
</head>
<body>
    <div class="main d-flex flex-column align-items-center justify-content-center">
        @if (TempData["error"] != null)
        {
            <div class="alert alert-danger text-center" role="alert" style="width: 20rem">
                @TempData["error"]
            </div>
        }
        <form class="d-flex flex-column align-items-center" asp-action="Register" asp-controller="Auth" method="POST">
            <input class="p-2" placeholder="Tên đăng nhập" asp-for="Username" />
            <span asp-validation-for="Username" class="m-2 text-danger"></span>
            <input class="p-2" placeholder="Địa chỉ email" asp-for="Email" />
            <span asp-validation-for="Email" class="m-2 text-danger"></span>
            <input class="p-2" placeholder="Mật khẩu" type="password" asp-for="Password" />
            <span asp-validation-for="Password" class="m-2 text-danger"></span>
            <input class="p-2" placeholder="Xác nhận mật khẩu" type="password" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" class="m-2 text-danger"></span>
            <div style="width: 20rem">
                <label>Giới tính</label>
                <input class="p-2 ms-1" asp-for="Gender" type="radio" value="true" style="width: auto" /> Nam
                <input class="p-2 ms-1" asp-for="Gender" type="radio" value="false" style="width: auto" /> Nữ
            </div>
            <span asp-validation-for="Gender" class="m-2 text-danger"></span>
            <div class="d-flex" style="width: 20rem">
                <input class="p-2" type="checkbox" value="true" style="width: auto" />
                <label class="ms-1">Cho phép gửi thông báo</label>
            </div>
            <input class="mt-2 p-2 text-center" value="Đăng kí" type="submit" />
        </form>
        <span>Đã tài khoản? <a asp-action="Login" asp-controller="Auth"> Đăng nhập ngay</a></span>
    </div>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>