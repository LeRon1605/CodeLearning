@using CodeStudy.Models
@model LoginUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/Auth/base.css" rel="stylesheet"/>
</head>
<body>
    <div class="main d-flex flex-column align-items-center justify-content-center">
        @if (TempData["error"] != null) {
                <div class="alert alert-danger text-center" role="alert" style="width: 20rem">
                      @TempData["error"]
                </div>
        }
        <form class="d-flex flex-column align-items-center justify-content-center col-2" asp-action="Login" asp-controller="Auth" method="POST">
            <input class="mb-3 p-2" placeholder="Tên đăng nhập" asp-for="Name" />
            <span asp-validation-for="Name"></span>
            <input class="mb-3 p-2" placeholder="Mật khẩu" type="password" asp-for="Password" />
            <span asp-validation-for="Password"></span>
            <input class="text-center p-2" value="Đăng nhập" type="submit" />
        </form>
        <span class="mt-2">Không có tài khoản? <a asp-action="Register" asp-controller="Auth"> Đăng kí ngay</a></span>
        <span class="mt-2">Quên mật khẩu? <a asp-action="ForgetPassword" asp-controller="Auth"> Đặt lại mật khẩu</a></span>
    </div>
    <partial name="_ValidationScriptsPartial"/>
</body>
</html>