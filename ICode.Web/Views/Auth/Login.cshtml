@using CodeStudy.Models
@model LoginUser
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link href="~/css/Auth/base.css" rel="stylesheet"/>
</head>
<body>
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center" style="height: 100vh">
            <div class="col-md-6 col-xl-4">
                @if (TempData["error"] != null) {
                        <div class="alert alert-danger text-center" role="alert" style="width: 20rem">
                              @TempData["error"]
                        </div>
                }
                <div class="d-flex flex-column align-items-center">
                    <form class="text-center" method="post" asp-action="Login" asp-controller="Auth">
                        <div class="mb-3">
                            <input class="form-control" placeholder="Tên đăng nhập" asp-for="Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div class="mb-3">
                            <input class="form-control" type="password" placeholder="Password" asp-for="Password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Đăng nhập</button></div>
                        <div class="mb-3"><a asp-controller="Auth" asp-action="GoogleLogin" class="btn btn-info text-white d-block w-100">Đăng nhập bằng google</a></div>
                        <div class="d-flex flex-column">
                            <a class="text-decoration-none" style="text-align: left;" asp-action="ForgetPassword" asp-controller="Auth">Đặt lại mật khẩu</a>
                            <span>
                                Không có tài khoản?
                                <a class="text-decoration-none" style="text-align: left;" asp-action="Register" asp-controller="Auth">Đăng kí</a>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <partial name="_ValidationScriptsPartial"/>
</body>
</html>